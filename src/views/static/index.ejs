<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ./partials/header.ejs %>
    </head>
    <body>
        <main class="container">
            <div class="row">
                <h1 class="display-1">The Wall</h1>
                <!-- Wall -->
                <div class="col-12">
                    <div class="row">
                        <div class="col-12">
                            <h1 class="display-3">Posts</h1>
                            <ul class="list-group">
                                <% if(posts && posts.length !== 0) { %>
                                    <% posts.forEach((post) => { %>
                                        <li class="list-group-item"><%= post.message %></li>
                                    <% }) %>
                                <% } else { %>
                                    <li class="list-group-item">Nothing here...</li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <h1 class="display-3">Comment</h1>
                            <form action="/" method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="message" aria-describedby="messageHelp" placeholder="Enter message">
                                    <small class="text-muted" id="messageHelp">cannot be blank.</small>
                                </div>
                                <button type="submit" class="btn btn-success">Enter</button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Sidebar
                <div class="col-3">

                </div>
                -->
            </div>
        </main>
        <% include ./partials/baseScripts.ejs %>
    </body>
</html>